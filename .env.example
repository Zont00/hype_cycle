# Database
DATABASE_URL=sqlite:///./data/hype_cycle.db

# Semantic Scholar API (optional but recommended for higher rate limits)
SEMANTIC_SCHOLAR_API_KEY=your_api_key_here
SEMANTIC_SCHOLAR_BASE_URL=https://api.semanticscholar.org/graph/v1

# NewsAPI.org (Get your free API key at https://newsapi.org/register)
NEWSAPI_API_KEY=your_api_key_here
NEWSAPI_BASE_URL=https://newsapi.org
NEWSAPI_PAGE_SIZE=100
NEWSAPI_MAX_ARTICLES=500
NEWSAPI_LANGUAGE=en
NEWSAPI_SORT_BY=relevancy
NEWSAPI_LOOKBACK_DAYS=30

# Collection parameters
MAX_BATCHES_PER_COLLECTION=10
BATCH_SIZE=1000
COLLECTION_TIMEOUT_SECONDS=300

# Time horizon (years to look back for papers)
PAPER_LOOKBACK_YEARS=10

# API retry configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2
REQUEST_TIMEOUT_SECONDS=30
